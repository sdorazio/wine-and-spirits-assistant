{
  "name": "Fine Wine & Good Spirits Assistant",
  "description": "Shopping assistant for Fine Wine & Good Spirits Website",
  "version": "1.0",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "cookies",
    "storage",
    "activeTab",
    "*://*.finewineandgoodspirits.com/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Start Shopping"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.finewineandgoodspirits.com/*"
      ],
      "js": ["content.js"]
    }
  ],
  "manifest_version": 2
}
